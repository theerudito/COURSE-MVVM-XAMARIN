<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ALL.View.PageDatePicker">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <DatePicker HorizontalOptions="Center" Date="{Binding Fecha}">
                <DatePicker.Format>
                    <x:String>dd/MM/yyyy</x:String>
                </DatePicker.Format>
            </DatePicker>
            <Label Text="{Binding ResultadoFecha, Mode=TwoWay}" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>