<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ALL.View.PagePicker">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="PIKER NORMAR"/>

            <Picker Title="Seleccione una opcion" SelectedItem="{Binding SelecionarCargo}">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Admin</x:String>
                        <x:String>Empleado</x:String>
                        <x:String>Jefe</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>